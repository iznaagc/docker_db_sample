    <peroperty name="contenTypeColumnName" value="CONTENT_TYPE" />
    <peroperty name="fileColumnName" value="ATTACHMENT_FILE" />
  </component>

  <component name="mailTemplateTable" class="nablarch.common.mail.MailTemplateTable">
    <peroperty name="tableName" value="MAIL_TEMPLATE" />
    <peroperty name="mailTemplateColumnName" value="MAIL_TEMPLATE_CODE" />
    <peroperty name="langColumnName" value="LANG" />
    <peroperty name="subjectColumnName" value="MAIL_SUBJECT" />
    <peroperty name="charsetColumnName" value="CHARSET" />
